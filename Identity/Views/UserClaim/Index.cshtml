@model IEnumerable<System.Security.Claims.Claim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Claim</h1>
<a asp-action="Create">Add New Claim</a>

<table class="table table-hover table-bordered">
    <tr>
        <td>Subject</td>
        <td>Issuer</td>
        <td>Type</td>
        <td>Value</td>
        <td>Delete</td>
    </tr>
    @foreach(var item in Model)
    {   <tr>
            <td>@item.Subject.Name</td>
            <td>@item.Issuer</td>
            <td>@item.Type</td>
            <td>@item.Value</td>
            <td>
                <a asp-action="Delete" asp-route-ClaimValue="@item.Type" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

