@model IEnumerable<System.Security.Claims.Claim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Claim</h1>

<table class="table table-hover table-bordered">
    <tr>
        <td>Subject</td>
        <td>Issuer</td>
        <td>Type</td>
        <td>Value</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>@item.Subject.Name</tr>
        <tr>@item.Issuer</tr>
        <tr>@item.Type</tr>
        <tr>@item.Value</tr>
    }
</table>

